# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	#status_command i3status -c ~/config/i3/i3status.conf
	# HACK: this custom script allows to have active window into i3bar
	status_command ~/config/i3/my_i3status.sh -c ~/config/i3/i3status.conf
	position bottom
	mode dock
	workspace_buttons yes
	tray_output primary
	verbose yes
	font pango:FiraCode Nerd Font 14px

	colors {
		background $nord0
		statusline $nord8
		separator  $nord3

		focused_workspace  $nord3 $nord8
		active_workspace   $nord8 $nord3
		inactive_workspace $nord0 $nord1
		urgent_workspace   $nord3 $nord11
		binding_mode       $nord12 $nord12 $nord3
	}
}
